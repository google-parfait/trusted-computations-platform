load("@rules_rust//rust:defs.bzl", "rust_library")

rust_library(
    name = "tcp_integration",
    srcs = glob(["src/*.rs"]),
    crate_features = select({
        "@platforms//os:linux": [
            "testing",
            "std",
        ],
        "//conditions:default": [],
    }),
    proc_macro_deps = ["@oak_crates_index//:prost-derive"],
    visibility = [
        "//visibility:public",
    ],
    deps = [
        "//proto:tcp_proto",
        "//runtime:tcp_runtime",
        "@crates_index//:hashbrown",
        "@crates_index//:prost",
        "@crates_index//:prost-types",
        "@crates_index//:slog",
        "@oak//micro_rpc",
        "@raft_rs//:raft",
    ] + select({
        "@platforms//os:linux": ["@crates_index//:slog-term"],
        "//conditions:default": [],
    }),
)
